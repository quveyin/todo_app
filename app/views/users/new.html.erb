<div class="auth-container">
  <div class="auth-card">
    <h1>Yeni Hesap Oluştur</h1>
    
    <% if flash[:error] %>
      <div class="alert alert-error">
        <%= flash[:error] %>
      </div>
    <% end %>
    
    <%= form_with model: @user, url: signup_path, local: true, class: "auth-form" do |form| %>
      <% if @user.errors.any? %>
        <div class="alert alert-error">
          <ul style="margin: 0; padding-left: 20px;">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= form.label :name, "Adınız:" %>
        <%= form.text_field :name, placeholder: "Adınızı girin", required: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :email, "Email:" %>
        <%= form.email_field :email, placeholder: "ornek@email.com", required: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :password, "Şifre:" %>
        <%= form.password_field :password, placeholder: "En az 6 karakter", required: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :password_confirmation, "Şifre Tekrar:" %>
        <%= form.password_field :password_confirmation, placeholder: "Şifrenizi tekrar girin", required: true %>
      </div>
      
      <div class="form-actions">
        <%= form.submit "Hesap Oluştur", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <div class="auth-links">
      <p>Zaten hesabınız var mı? <%= link_to "Giriş yap", login_path, class: "link" %></p>
    </div>
  </div>
</div>

<style>
.auth-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background: white;
  padding: 20px;
}

.auth-card {
  background: white;
  padding: 40px;
  border: 2px solid #22c55e;
  border-radius: 15px;
  width: 100%;
  max-width: 400px;
  text-align: center;
}

.auth-card h1 {
  color: #15803d;
  margin-bottom: 30px;
  font-size: 28px;
  font-weight: bold;
}

.auth-form {
  text-align: left;
}

.form-group {
  margin-bottom: 20px;
}

.form-group label {
  display: block;
  margin-bottom: 8px;
  color: #15803d;
  font-weight: bold;
}

.form-group input {
  width: 100%;
  padding: 12px 15px;
  border: 1px solid #22c55e;
  border-radius: 8px;
  font-size: 16px;
  box-sizing: border-box;
}

.form-group input:focus {
  outline: none;
  border-color: #16a34a;
  background: #f0fdf4;
}

.form-actions {
  margin-top: 30px;
}

.btn {
  width: 100%;
  padding: 12px;
  border: 1px solid #22c55e;
  border-radius: 8px;
  font-size: 16px;
  font-weight: bold;
  cursor: pointer;
}

.btn-primary {
  background: #22c55e;
  color: white;
}

.btn-primary:hover {
  background: #16a34a;
}

.auth-links {
  margin-top: 25px;
  padding-top: 20px;
  border-top: 1px solid #22c55e;
}

.auth-links p {
  margin: 0;
  color: #15803d;
}

.link {
  color: #15803d;
  text-decoration: none;
  font-weight: bold;
}

.link:hover {
  text-decoration: underline;
}

.alert {
  padding: 12px 15px;
  margin-bottom: 20px;
  border: 1px solid #22c55e;
}

.alert-error {
  background: #f0fdf4;
  color: #15803d;
}
</style>